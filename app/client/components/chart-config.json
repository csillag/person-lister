{
    "graphset": [{
        "height": "10%",
        "background-color": "white",
        "labels": [{
            "text": "Employees",
            "color": "white",
            "font-size": 30,
            "font-family": "Helvetica",
            "font-weight": "bold",
            "x": "20%",
            "y": "130"
        }, {
            "text": "Others",
            "color": "white",
            "font-size": 30,
            "font-family": "Helvetica",
            "font-weight": "bold",
            "x": "60%",
            "y": "130"
        }]
    }, {
        "type": "pop-pyramid",
        "y": "10%",
        "height": "90%",
        "background-color": "white",
        "options": {
            "aspect": "varea",
            "label-placement": "side",
            "side-2": {
                "plotarea": {
                    "background-color": "orange"
                }
            }
        },
        "legend": {
            "visible": false
        },
        "tooltip": {
            "background-color": "white",
            "border-width": 1,
            "border-color": "#05669D",
            "border-radius": 3,
            "shadow": false,
            "color": "#05669D",
            "text": "%v%"
        },
        "plot": {
            "stacked": true
        },
        "plotarea": {
            "margin-top": 10,
            "background-color": "green"
        },
        "scale-x": {
            "guide": {
                "line-color": "white",
                "line-width": 2,
                "line-style": "solid",
                "alpha": 0.5
            },
            "tick": {
                "visible": false
            },
            "item": {
                "text-align": "middle",
                "color": "white",
                "offset-x": 38,
                "offset-y": -8,
                "font-size": 9
            },
            "items-overlap": true,
            "values": "replace-with-range-labels"
        },
        "scale-y": {
            "line-width": 1,
            "line-color": "black",
            "format": "%v%",
            "item": {
                "color": "white",
                "font-size": 9,
                "offset-y": -20,
                "rules": [{
                    "rule": "%i == 4",
                    "visible": false
                }, {
                    "rule": "%i == 0",
                    "visible": false
                }]
            },
            "tick": {
                "offset-y": -10,
                "line-color": "white",
                "alpha": 0.5
            },
            "guide": {
                "visible": false
            },
            "short": true,
            "values": "0:30:2.5"
        },
        "series": [{
            "data-side": 1,
            "background-color": "white",
            "alpha-area": 0.8,
            "line-color": "white",
            "line-width": 1,
            "marker": {
                "visible": false
            },
            "values": "replace-with-serie-1"
        }, {
            "data-side": 2,
            "background-color": "white",
            "alpha-area": 0.8,
            "line-color": "white",
            "line-width": 1,
            "marker": {
                "visible": false
            },
            "values": "replace-with-serie-2"
        }]
    }]
